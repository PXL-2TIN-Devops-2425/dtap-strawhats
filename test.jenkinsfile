pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials') 
    }
  
    stages {
        stage ('cleanup'){
            steps{
                cleanWs()
                sh 'docker remove -f calc-app-container'
            }
        }
        stage('fetch app code') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/SarbjitSinghPXL/calculator-app-finished.git'
            }
        }
        stage('Install dependencies'){
            tools {
                nodejs 'testenvnode'
            }
            steps {
                sh 'npm install'
            }
        }
        stage('Build artifact'){
            steps{
                script {
                    docker.build("${DOCKERHUB_CREDENTIALS_USR}/calc-app-image:${env.BUILD_NUMBER}")
                }
            }
        } 
        stage('Push artifact'){
            steps{
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        docker.image("${DOCKERHUB_CREDENTIALS_USR}/calc-app-image:${env.BUILD_NUMBER}").push()
                        docker.image("${DOCKERHUB_CREDENTIALS_USR}/calc-app-image:${env.BUILD_NUMBER}").push('latest')
                    }
                }
            }
        }
        stage('deployment'){
            steps{
                sh 'docker run -d -p 3000:3000 --name=calc-app-container ${DOCKERHUB_CREDENTIALS_USR}/calc-app-image:latest'
            }
        }
    }
    post {
        always {
            sh 'docker logout'
            cleanWs()
        }
    }
}
