pipeline {
    agent any
  
    stages {
        stage ('cleanup'){
            steps{
                cleanWs()
            }
        }
        stage('fetch app code') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage('Install dependencies'){
            tools {
                nodejs 'testenvnode'
            }
            steps {
                sh 'npm install'
            }
        }
        stage('Build artifact'){
            steps{
                sh 'echo "FROM node:14" >> Dockerfile'
                sh 'echo "WORKDIR /usr/src/app" >> Dockerfile'
                sh 'echo "COPY . ." >> Dockerfile'
                sh 'echo "RUN npm install" >> Dockerfile'
                sh 'echo "EXPOSE 3000" >> Dockerfile'
                sh 'echo "CMD [\"npm\", \"start\"]" >> Dockerfile'
                sh 'ls -la'
            }
        } 
    }
    post {
        always {
            cleanWs()
        }
    }
}
